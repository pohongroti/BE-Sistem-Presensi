                </div>
            <h3><label bgcolor="red">DATA HASIL PENCARIAN</label></h3>
                <table border="3" bgcolor="white">
                    <tr align="center">
                        <th>ID PEGAWAI</th>
                        <th>NAMA PEGAWAI</th>
                        <th>JABATAN PEGAWAI</th>
                        <th>ID PRESENSI</th>
                        <th>TANGGAL/BULAN/TAHUN</th>
                        <th>KOORDINAT LONGITUDE</th>
                        <th>KOORDINAT LATITUDE</th>
                        <th>STATUS</th>
                    </tr>
                    <% if(laporanCariData.length!=0) { 
                        var i = 1;
                        laporanCariData.forEach(function(data){
                    %>
                    <tr align="center">
                        <td><%= data.idpegawai %></td>
                        <td><%= data.namapegawai %></td>
                        <td><%= data.jabatanpegawai %></td>
